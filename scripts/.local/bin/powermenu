#!/usr/bin/env bash

style="$HOME/.config/wofi/style.css"
entries=" Shutdown\n Reboot\n Suspend\n Logout"

selected=$(echo -e "$entries" | wofi --dmenu --cache-file=/dev/null --prompt "Power" --style "${style}")

case $selected in
    " Shutdown")
        systemctl poweroff
        ;;
    " Reboot")
        systemctl reboot
        ;;
    " Suspend")
        systemctl suspend
        ;;
    " Logout")
        # Adjust depending on your compositor/session
        if [ "$XDG_SESSION_DESKTOP" = "sway" ]; then
            swaymsg exit
        elif [ "$XDG_SESSION_DESKTOP" = "Hyprland" ]; then
            hyprctl dispatch exit
        fi
        ;;
esac

